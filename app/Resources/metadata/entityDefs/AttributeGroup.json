      "type": "varchar",
      "layoutMassUpdateDisabled": true,
      "required": true,
      "trim": true,
      "emHidden": true,
      "view": "pim:views/fields/code-from-name",
      "pattern": "/^[a-z_0-9{}]+$/"
    },
    "isActive": {
      "notNull": true,
      "type": "bool",
      "default": true,
      "audited": false,
      "readOnly": true,
      "tooltip": false,
      "layoutDetailDisabled": true,
      "filterDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutListDisabled": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "ownerUser": {
      "type": "link",
      "required": true,
      "view": "views/fields/owner-user"
    },
    "assignedUser": {
      "type": "link",
      "required": true,
      "view": "views/fields/assigned-user"
    },
    "teams": {
      "type": "linkMultiple",
      "view": "views/fields/teams"
    },
    "attributes": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "noLoad": true,
      "importDisabled": true
    },
    "sortOrder": {
      "type": "int",
      "required": false,
      "default": 0,
      "disableFormatting": false,
      "audited": false,
      "readOnly": false,
      "tooltip": false
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "ownerUser": {
      "type": "belongsTo",
      "entity": "User"
    },
    "assignedUser": {
      "type": "belongsTo",
      "entity": "User"
    },
    "teams": {
      "type": "hasMany",
      "entity": "Team",
      "relationName": "EntityTeam",
      "layoutRelationshipsDisabled": true
    },
    "attributes": {
      "type": "hasMany",
      "foreign": "attributeGroup",
      "entity": "Attribute",
      "audited": false
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false,
    "textFilterFields": [
      "name",
      "code"
    ]
  },
  "indexes": {
    "ownerUser": {
      "columns": [
        "ownerUserId",
        "deleted"
      ]
    },
    "assignedUser": {
      "columns": [
        "assignedUserId",
        "deleted"
      ]
    }
  }
